<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form" >

    <Panel headerText="{i18n>panelFrTitle}"
           class="sapUiResponsiveMargin"
           width="80%">
        <content>

            <form:SimpleForm
                id="simpleForm"
                editable="false">
            
                <form:content>
                    <Label text="{i18n>labelName}" />
                    <Input />
                </form:content>
            
            </form:SimpleForm>

        </content>    
    </Panel>

</core:FragmentDefinition>