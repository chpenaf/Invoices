<mvc:View
    controllerName="com.logaligroup.invoices.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Panel headerText="{i18n>helloPanel}"
           class="sapUiResponsiveMargin"
           width="auto">
        <content>
            <Button text="{i18n>helloDialogButton}" 
                    class="sapUiSmallMarginEnd" 
                    press="onOpenDialog" />
            <Button text="{i18n>showHelloWorld}"
                    press="onShowMessage" 
                    class="sapUiSmallMarginEnd" />
            <Input value="{view>/recipient/name}"
                    width="60%"
                    class="sapUiSmallMarginEnd" />
            <Text text="Hello {view>/recipient/name}" 
                  class="boldElements" />
        </content>
    </Panel>

</mvc:View>