<mvc:View
    controllerName="com.logaligroup.invoices.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page title="{i18n>title}">

        <content>

            <Panel headerText="{i18n>helloPanel}">
                <content>
                    <Button text="{i18n>showHelloWorld}"
                            press="onShowMessage" />
                    <Input value="{view>/recipient/name}"
                           width="60%" />
                </content>
            </Panel>

        </content>

    </Page>

</mvc:View>